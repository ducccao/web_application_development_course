<div class="card">
  <h5 class="card-header">
    Products
  </h5>

  {{!-- if
    condition
    {{#if}}

    {{else}}

    {{/if}}

    loop
    {{#each list and alias}}

    {{/each}}

     --}}

  {{#if this.isEmpty}}
  <div class="card-body">
    <div class="card-text">
      kh co du lieu
    </div>
  </div>
  {{else}}






  <div class="card-body">
    <div class="row">

      {{#each this.products}}
      <div class="col-sm-4">
        <div class="card mb-3" style="width: 18rem;">
          <img class="card-img-top" src="/public/imgs/sp/{{productID}}/main_thumbs.jpg" alt="{{productName}}"
            title="{{productName}}">
          <div class="card-body">
            <h5 class="card-title">{{productName}} </h5>
            <h5 class="card-title text-danger ">{{format Price}} </h5>

            <p class="card-text">
              {{TinyDes}}
            </p>
          </div>

          <div class="card-footer">
            <a href="#" class="btn btn-sm btn-outline-primary">
              <i class="fa fa-eye">
                Details
              </i>
            </a>
            <a href="#" class="btn btn-sm btn-outline-success">
              <i class="fa fa-shopping-cart">
                Add to cart
              </i>
            </a>

          </div>
        </div>
      </div>
      {{/each}}


    </div>
  </div>
  {{/if}}





  <div class="card-footer text-muted">
    <nav aria-label="...">
      <ul class="pagination">
        <li class="page-item    {{#unless can_go_prev}} disabled {{/unless}} ">
          <a class=" page-link" href="?page={{previosPage}}" tabindex="-1">
            <i class="fa fa-backward"></i>
          </a>
        </li>
        {{#each this.pageItem }}



        <li class="page-item {{#if isActive }}active {{/if}}"><a class="page-link" href="?page={{value}}">
            {{value}}
          </a></li>

        {{/each}}


        <li class="page-item {{#unless can_go_next}} disabled {{/unless}}">
          <a class="page-link" href="?page={{nextPage}}">
            <i class="fa fa-forward"></i>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</div>