<div class="card">
    <h5 class="card-header d-flex justify-content-between ">
        Categories

        <a href="/admin/categories/add" role="button" class="btn btn-outline-success">
            <i class="fa fa-plus">
                Add category
            </i>
        </a>
    </h5>

    {{!-- if
    condition
    {{#if}}

    {{else}}

    {{/if}}

    loop
    {{#each list and alias}}

    {{/each}}

     --}}

    {{#if this.isEmpty}}
    <div class="card-body">
        <div class="card-text">
            kh co du lieu
        </div>
    </div>
    {{else}}

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">&nbsp;</th>

                </tr>
            </thead>
            <tbody>
                {{#each this.categories}}

                <tr>
                    <th scope="row">
                        {{cateID}}
                    </th>
                    <td>
                        {{cateName}}
                    </td>
                    <td class="text-right">
                        <a href="/admin/categories/{{cateID}}" title="Edit category" class="btn btn-sm btn-primary">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>

                </tr>
                {{/each}}


            </tbody>
        </table>
    </div>
    {{/if}}



    <div class="card-footer text-muted">
        footer
    </div>
</div>